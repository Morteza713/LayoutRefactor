<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:text="Button1" />

    <Button
        android:id="@+id/btn_sample1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn1"
        android:layout_alignParentStart="true"
        android:text="sample1" />

    <Button
        android:id="@+id/btn_sample2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sample1"
        android:layout_toEndOf="@id/btn_sample1"
        android:text="sample2" />

    <Button
        android:id="@+id/btn_sample3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sample2"
        android:layout_toStartOf="@id/btn_sample5"
        android:layout_toEndOf="@id/btn_sample2"
        android:text="sample3" />

    <Button
        android:id="@+id/btn_sample4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/btn7"
        android:layout_alignBottom="@id/btn_sample1"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/btn_sample1"
        android:text="sample4" />

    <Button
        android:id="@+id/btn_sample5"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn2"
        android:layout_below="@id/btn_sample4"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:text="sample5" />

    <Button
        android:id="@+id/btn_sample6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn3"
        android:layout_below="@id/btn_sample1"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/btn_sample2"
        android:text="sample6" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sample3"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Button2" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn5"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Button3" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Button4" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sample3"
        android:layout_alignBottom="@+id/btn2"
        android:layout_centerHorizontal="true"
        android:text="Button5" />

    <Button
        android:id="@+id/btn_sample7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn4"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/btn6"
        android:text="sample7" />

    <Button
        android:id="@+id/btn_sample8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn6"
        android:layout_below="@id/btn2"
        android:layout_alignEnd="@id/btn4"
        android:layout_toEndOf="@id/btn_sample7"
        android:text="sample8" />

    <Button
        android:id="@+id/btn_sample9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_sample7"
        android:layout_below="@id/btn3"
        android:layout_alignStart="@id/btn3"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/btn_sample8"
        android:text="sample9" />

    <Button
        android:id="@+id/btn_sample10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_sample3"
        android:layout_below="@id/btn_sample4"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/btn_sample5"
        android:layout_toEndOf="@id/btn_sample2"
        android:text="sample10" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn4"
        android:layout_centerHorizontal="true"
        android:text="Button6" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btn1"
        android:text="Button7" />

</RelativeLayout>